<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
        android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/default_background"></solid>
            <stroke android:color="@color/color_black" android:width="2dp"></stroke>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/default_background"></solid>
            <stroke android:color="@color/color_black" android:width="2dp"></stroke>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/default_background"></solid>
            <stroke android:color="@color/color_black" android:width="2dp"></stroke>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_selected="true">

        <shape android:shape="oval">
            <solid android:color="@color/default_background"></solid>
            <stroke android:color="@color/color_black" android:width="2dp"></stroke>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/color_white"></solid>
            <stroke android:color="@color/color_black" android:width="2dp"></stroke>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
</selector>