<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_container"
    android:padding="@dimen/default_margin_small"
    android:layout_marginBottom="@dimen/default_margin_tiny">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/default_margin_tiny"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_list"
        android:textColor="@color/color_black"
        android:id="@+id/tv_text1"
        android:gravity="center"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_margin_tiny"
        android:layout_marginBottom="@dimen/default_margin_tiny"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title1"
            android:textColor="@color/color_black"
            android:text="Display Share"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title2"
            android:textColor="@color/color_black"
            android:text="Belanja"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text1"
            android:hint="0"
            android:gravity="right"
            android:text=""
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:textColor="@color/color_black"
            style="@style/formControlInput"
            android:id="@+id/edt_text2"
            android:hint="0"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text3"
            android:hint="0"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:layout_marginRight="@dimen/default_margin_tiny"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text4"
            android:hint="Rp"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/default_margin_tiny"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title3"
            android:textColor="@color/color_black"
            android:text="Small"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title4"
            android:textColor="@color/color_black"
            android:text="Medium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title5"
            android:textColor="@color/color_black"
            android:text="High"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_margin_tiny"
        android:layout_marginBottom="@dimen/default_margin_tiny"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title6"
            android:textColor="@color/color_black"
            android:text="Sales Share"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title7"
            android:textColor="@color/color_black"
            android:text="Recharge"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text5"
            android:hint="0"
            android:gravity="right"
            android:text=""
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:textColor="@color/color_black"
            style="@style/formControlInput"
            android:id="@+id/edt_text6"
            android:hint="0"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text7"
            android:hint="0"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:layout_marginRight="@dimen/default_margin_tiny"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            style="@style/formControlInput"
            android:id="@+id/edt_text8"
            android:hint="Rp"
            android:gravity="right"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title8"
            android:textColor="@color/color_black"
            android:text="Small"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title9"
            android:textColor="@color/color_black"
            android:text="Medium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_tiny"
            android:gravity="center"
            android:id="@+id/tv_title10"
            android:textColor="@color/color_black"
            android:text="High"/>
    </LinearLayout>
</LinearLayout>