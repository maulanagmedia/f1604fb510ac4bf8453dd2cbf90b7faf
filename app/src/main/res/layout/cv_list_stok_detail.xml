<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_margin_tiny"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_small"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_input_up"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item1"
                style="@style/titleList"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_input_down"
            android:padding="@dimen/default_margin_tiny">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/subtitle_text_list"
                    android:padding="@dimen/default_margin_tiny"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/value_text_list"
                    android:id="@+id/tv_item2"
                    android:textColor="@color/default_background"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:padding="@dimen/default_margin_tiny"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_line"
                android:background="@color/color_grey"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Terjual"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/subtitle_text_list"
                        android:padding="@dimen/default_margin_tiny"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_item3"
                        android:textSize="@dimen/value_text_list"
                        android:textColor="@color/default_background"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="@dimen/default_margin_tiny"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/default_line"
                    android:layout_height="match_parent"
                    android:background="@color/color_grey"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sisa Stok"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/subtitle_text_list"
                        android:padding="@dimen/default_margin_tiny"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/value_text_list"
                        android:id="@+id/tv_item4"
                        android:textColor="@color/default_background"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:padding="@dimen/default_margin_tiny"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_line"
                android:background="@color/color_grey"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Terjual"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/subtitle_text_list"
                    android:padding="@dimen/default_margin_tiny"/>

                <com.maulana.custommodul.CustomView.NestedListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/lv_terjual"></com.maulana.custommodul.CustomView.NestedListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>