<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_margin_tiny"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/default_background"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_item1"
            style="@style/titleList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_next"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background2"
                android:text="No Bukti"
                android:textSize="@dimen/subtitle_text_list"
                android:padding="@dimen/default_margin_tiny"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/value_text_list"
                android:id="@+id/tv_item2"
                android:textStyle="bold"
                android:padding="@dimen/default_margin_tiny"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background2"
                android:text="Penjualan"
                android:textSize="@dimen/subtitle_text_list"
                android:padding="@dimen/default_margin_tiny"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item3"
                android:textSize="@dimen/value_text_list"
                android:textStyle="bold"
                android:padding="@dimen/default_margin_tiny"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_margin_small"
        android:background="@color/default_background"></LinearLayout>

</LinearLayout>