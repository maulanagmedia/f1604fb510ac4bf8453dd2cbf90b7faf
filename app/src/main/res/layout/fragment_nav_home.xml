<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmedia.net.id.psp.NavHome.NavHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="@color/color_grey"
                android:id="@+id/rl_header_slide">

                <gmedia.net.id.psp.CustomView.WrapContentViewPager
                    android:id="@+id/pager_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/slider_pager_item"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"></gmedia.net.id.psp.CustomView.WrapContentViewPager>

                <RelativeLayout
                    android:id="@+id/rl_view_pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_view_pager_dot_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:id="@+id/ll_1"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:layout_marginBottom="@dimen/default_margin_small"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_add_customer"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_add_customer" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Tambah Outlet"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_order_mkios"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_order_mkios"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Order Mkios"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_order_perdana"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_order_perdana"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Order Perdana"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:id="@+id/ll_2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:layout_marginBottom="@dimen/default_margin_small"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/ll_penjualan_mkios"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_penjualan_mkios"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Penjualan Mkios"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/ll_penjualan_perdana"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_penjualan_perdana"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Penjualan Perdana"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_order_tcash"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_tcash"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Order TCash"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_penjualan"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_penjualan_mkios"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Penjualan Hari Ini"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_riwayat_penjualan"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_history"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Riwayat Penjualan"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:id="@+id/ll_3"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:layout_marginBottom="@dimen/default_margin_small"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_daftar_piutang"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_daftar_piutang"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Daftar Piutang"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_stok_sales"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_stock__sales"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Stok Sales"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_complaint"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_komplain"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Komplain"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:id="@+id/ll_4"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:layout_marginBottom="@dimen/default_margin_small"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_verifikasi_outlet"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_verif_outlet"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Verifikasi Outlet"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_checkin"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_chekin"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Kunjungan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_info_deposit"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_penjualan_perdana"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Info Deposit"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:id="@+id/ll_5"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:layout_marginBottom="@dimen/default_margin_small"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_maps_kunjungan"
                            android:background="?attr/selectableItemBackground"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:padding="@dimen/default_margin_small"
                                android:src="@drawable/ic_map_kunjungan"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:textSize="@dimen/font_menu"
                                android:textColor="@color/color_black"
                                android:text="Maps Kunjungan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/default_margin_small"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:gravity="center"
                            android:weightSum="1">
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ns_profile"
                android:background="@color/default_background"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/iv_expand"
                            android:src="@mipmap/ic_arrow_up"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/ic_account"
                                android:padding="@dimen/default_margin_small"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/default_margin_small"
                            android:paddingRight="@dimen/default_margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/value_text_list"
                                android:id="@+id/tv_jabatan"
                                android:text=""/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/title_text_list"
                                android:textStyle="bold"
                                android:id="@+id/tv_nama_sales"
                                android:text=""/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_white"
                                android:layout_marginTop="@dimen/default_margin_small"
                                android:textSize="@dimen/value_text_list"
                                android:text="Total Omset"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/title_text_list"
                                android:textStyle="bold"
                                android:id="@+id/tv_total_omset"
                                android:text=""/>
                        </LinearLayout>

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarSize="3dp"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:nestedScrollingEnabled="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_small"
                                android:layout_margin="@dimen/default_margin_tiny"
                                android:background="@color/color_white"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/home_title"
                                    android:text="Omset MKIOS"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_omset_mkios"
                                    style="@style/home_subtitle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_small"
                                android:layout_margin="@dimen/default_margin_tiny"
                                android:background="@color/color_white"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/home_title"
                                    android:text="Omset Perdana"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
